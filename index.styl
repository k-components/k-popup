.k-p-overlay
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 1000
  background rgba(0,0,0,0.07)
  animation 0.3s k-p-overlay ease

.hiding
  animation 0.3s k-p-overlay-off ease
  background rgba(0,0,0,0)

.k-popup.hiding
  animation 0.3s k-p-popup-off cubic-bezier(0, 1, 0, 1)
  opacity 0
  transform translateY(100px)

.k-popup.leftborder:before
  left 10px

.k-popup.k-popup-above:before
  top unset
  bottom -24px
  border-top 8px solid #fff
  border-bottom unset


.k-popup:before
  border-left 8px solid transparent
  border-right 8px solid transparent
  border-bottom 8px solid #fff
  position absolute
  top -24px
  left 115px
  content '.'
  color transparent
  line-height 16px

.k-popup.k-popup-above
  bottom 22px
  animation 0.3s k-p-popup-above cubic-bezier(0, 1, 0, 1)

.k-popup
  font-size 0.9rem
  text-align left
  position absolute
  transform translate(0, 0)  
  background #fafafa
  border-radius 7px
  box-shadow 0 0 10px rgba(0,0,0,0.15)
  width 250px
  background #fff
  animation 0.3s k-p-popup cubic-bezier(0, 1, 0, 1)
  z-index 10000
  margin-top 10px

  .k-popup-arrow
    position absolute
    width 0
    height 0
    left 50%
    border-width 0 7px 5px
    border-bottom-color #d9e1e8  

  p
    margin 0
  
  .k-popup-inner
    padding 0
    color #555
    max-height: 500px;
    overflow-y: auto;
    overflow-x: hidden;
    border-radius 7px
    overflow hidden

@keyframes k-p-overlay
  0%
    background rgba(0,0,0,0)
  100%
    background rgba(0,0,0,0.07)

@keyframes k-p-popup
  0%
    opacity 0
    transform translate(0, -100px) scale(0.4)
  100%
    opacity 1
    transform translate(0, 0) scale(1)

@keyframes k-p-popup-above
  0%
    opacity 0
    transform translate(0, 100px) scale(0.4)
  100%
    opacity 1
    transform translate(0, 0) scale(1)

@keyframes k-p-overlay-off
  0%
    background rgba(0,0,0,0.07)
  100%
    background rgba(0,0,0,0)

@keyframes k-p-popup-off
  0%
    opacity 1
    transform translate(0, 0) 
  100%
    opacity 0
    transform translate(0, 100px)
